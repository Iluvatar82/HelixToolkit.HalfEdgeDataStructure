        <helix:HelixViewport3D Grid.Row="2" x:Name="ViewPort" ViewCubeTopText="T" ViewCubeBottomText="Bo" ViewCubeRightText="F" ViewCubeLeftText="Ba" ViewCubeFrontText="R" ViewCubeBackText="L" ShowCoordinateSystem="True" CoordinateSystemHorizontalPosition="Right" RotateAroundMouseDownPoint="True" ZoomAroundMouseDownPoint="True" MouseMove="ViewPort_MouseMove">
            <helix:HelixViewport3D.Camera>
                <PerspectiveCamera x:Name="Camera" Position="-4,-10, 12" LookDirection="3, 8, -8" UpDirection="0, 0, 1"></PerspectiveCamera>
            </helix:HelixViewport3D.Camera>
        </helix:HelixViewport3D>
        <GroupBox Grid.Row="2" HorizontalAlignment="Right" Header="Scene Items">
            <ItemsControl x:Name="SceneItems" ItemsSource="{Binding AddedSceneElements, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}">
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <CheckBox IsChecked="True" DataContext="{Binding}" Content="{Binding Name}" Click="CheckBox_Click" Margin=".5"></CheckBox>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>
